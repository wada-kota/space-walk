{
  "compilerOptions": {
    "types": ["vite/client", "node"],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
